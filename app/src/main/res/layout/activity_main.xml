<?xml version="1.0" encoding="UTF-8"?>

<GridLayout
    android:columnCount="4"
    android:rowCount="5"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/input1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnSpan="4"
        android:layout_rowSpan="1"
        android:height="80sp"
        android:textSize="45sp"
        android:textColor="#666"
        android:maxEms="8"
        android:lines="1"
        android:layout_gravity="right"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:maxEms="4"
        android:lines="1"
        android:textColor="#000"
        android:textSize="60sp"
        android:height="80sp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="4"
        android:id="@+id/input2"/>


    <Button
        android:id="@+id/clear"
        android:textSize="30sp"
        android:text="C"/>

    <Button
        android:id="@+id/back"
        android:textSize="30sp"
        android:text="←"/>

    <Button
        android:id="@+id/divide"
        android:textSize="30sp"
        android:text="÷"/>

    <Button
        android:id="@+id/multiply"
        android:textSize="30sp"
        android:text="×"/>

    <Button
        android:id="@+id/seven"
        android:textSize="30sp"
        android:text="7"/>

    <Button
        android:id="@+id/eight"
        android:textSize="30sp"
        android:text="8"/>

    <Button
        android:id="@+id/nine"
        android:textSize="30sp"
        android:text="9"/>

    <Button
        android:id="@+id/minus"
        android:textSize="30sp"
        android:text="－"/>

    <Button
        android:id="@+id/four"
        android:textSize="30sp"
        android:text="4"/>

    <Button
        android:id="@+id/five"
        android:textSize="30sp"
        android:text="5"/>

    <Button
        android:id="@+id/six"
        android:textSize="30sp"
        android:text="6"/>

    <Button
        android:id="@+id/plus"
        android:textSize="30sp"
        android:text="＋"/>

    <Button
        android:id="@+id/one"
        android:textSize="30sp"
        android:text="1"/>

    <Button
        android:id="@+id/two"
        android:textSize="30sp"
        android:text="2"/>

    <Button
        android:id="@+id/three"
        android:textSize="30sp"
        android:text="3"/>

    <Button
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:id="@+id/equal"
        android:text="＝"
        android:textSize="30sp"
        android:background="#2bb"/>

    <Button
        android:id="@+id/parenthesis"
        android:textSize="30sp"
        android:text="( )"/>

    <Button
        android:id="@+id/zero"
        android:textSize="30sp"
        android:text="0"/>

    <Button
        android:id="@+id/dot"
        android:textSize="30sp"
        android:text="."/>

</GridLayout>